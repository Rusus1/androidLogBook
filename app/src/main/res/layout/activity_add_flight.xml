<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFlight">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Number of flights: "
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/flights_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="in the same day"
                        android:inputType="textPersonName" />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Date: "
                        android:textSize="20sp" />

                        <EditText
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:ems="10"
                            android:inputType="datetime"
                            android:focusable="false"
                            android:clickable="true"
                            android:hint="YYYY-MM-DD"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Glider type: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/glider_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="IS28B2/IS29D2/etc.." />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Registration: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="YR-0001" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Departure: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Place of departure" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Arrival: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Place of arrival"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Launch type: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/launch_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Winch/Plane"/>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Crew capacity: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/crew_capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Number of crewman"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="PIC name: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/pic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="John Doe"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="PIC total time: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/pic_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Flight time in minutes" />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Under instruction: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/under_instruction_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="0" />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="20"
                        android:text="Observations: "
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Remarks from instructor" />


                </LinearLayout>



                        <Button
                            android:id="@+id/insert_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert" />


            </LinearLayout>
        </ScrollView>
</LinearLayout>